apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ app_name }}
  labels:
    app: {{ app_name }}
    version: {{ image_tag | default('latest') }}
spec:
  replicas: {{ replicas | default(2) }}
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 1
      maxSurge: 1
  selector:
    matchLabels:
      app: {{ app_name }}
  template:
    metadata:
      labels:
        app: {{ app_name }}
        version: {{ image_tag | default('latest') }}
    spec:
      containers:
      - name: {{ app_name }}
        image: {{ image_name }}:{{ image_tag | default('latest') }}
        ports:
        - containerPort: {{ app_port | default(3000) }}
          name: http
        env:
        - name: DATABASE_URL
          valueFrom:
            secretKeyRef:
              name: {{ app_name }}
              key: database-url
        readinessProbe:
          httpGet:
            path: {{ health_check_path | default('/') }}
            port: {{ app_port | default(3000) }}
          initialDelaySeconds: 10
          periodSeconds: 5
          timeoutSeconds: 3
          successThreshold: 1
          failureThreshold: 3
        livenessProbe:
          httpGet:
            path: {{ health_check_path | default('/') }}
            port: {{ app_port | default(3000) }}
          initialDelaySeconds: 30
          periodSeconds: 10
          timeoutSeconds: 5
          failureThreshold: 3
---
apiVersion: v1
kind: Service
metadata:
  name: {{ app_name }}-service
  namespace: {{ namespace | default('default') }}
spec:
  selector:
    app: {{ app_name }}
  ports:
  - port: 80
    targetPort: {{ app_port | default(3000) }}
    name: http
  type: {{ service_type | default('LoadBalancer') }}
