{
  "dashboard": {
    "id": null,
    "title": "Spring Boot Application Dashboard",
    "tags": ["spring-boot", "tripr-app"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Application Health",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"tripr-app\"}",
            "legendFormat": "Application Status"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "JVM Memory Usage",
        "type": "timeseries",
        "targets": [
          {
            "expr": "jvm_memory_used_bytes{job=\"tripr-app\"}",
            "legendFormat": "Used Memory"
          },
          {
            "expr": "jvm_memory_max_bytes{job=\"tripr-app\"}",
            "legendFormat": "Max Memory"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "API Request Rate",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(api_request_duration_seconds_count{job=\"tripr-app\"}[5m])",
            "legendFormat": "Requests/sec - {{endpoint}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "API Response Times",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(api_request_duration_seconds_bucket{job=\"tripr-app\"}[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(api_request_duration_seconds_bucket{job=\"tripr-app\"}[5m]))",
            "legendFormat": "50th percentile"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "User Login Attempts",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(user_login_attempts_total{job=\"tripr-app\"}[5m])",
            "legendFormat": "Login Attempts/sec"
          },
          {
            "expr": "rate(user_login_failures_total{job=\"tripr-app\"}[5m])",
            "legendFormat": "Login Failures/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "Password Reset Metrics",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(password_reset_requests_total{job=\"tripr-app\"}[5m])",
            "legendFormat": "Reset Requests/sec"
          },
          {
            "expr": "rate(password_reset_success_total{job=\"tripr-app\"}[5m])",
            "legendFormat": "Reset Success/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s"
  }
}
